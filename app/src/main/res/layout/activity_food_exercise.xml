<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_food_exercise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nicha.finalproject.FoodExerciseActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnFood"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_food"
        android:text="FOOD"
        android:textColor="#ffffff"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btnExercise"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_exercise"
        android:text="EXERCISE"
        android:textColor="#ffffff"
        android:textSize="30sp"/>



</LinearLayout>
